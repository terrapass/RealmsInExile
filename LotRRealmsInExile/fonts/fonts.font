# Each font should specify what it is used for.
# Name fonts after intented usage, not after source file names.

font = {
	name = "Debug"

	fontstyle = {
		style = regular
		fontfiles = "albertus_light"
	}
}

## Font used in-game
font = {
	name = "StandardGameFont"

	fontstyle = {
		style = regular
		fontfiles = "albertus_standard"
	}

	fontstyle = {
		style = bold
		fontfiles = "albertus_medium"
	}

	fontstyle = {
		style = italic
		fontfiles = "albertus_standarditalic"
	}

	fontstyle = {
		style = bold|italic
		fontfiles = "albertus_mediumitalic"
	}

	underlineformats = {
		default = {
			thickness = 1
			offset = 0.12
		}
	}
}

# Title font
font = {
	name = "TitleFont"

	fontstyle = {
		style = regular
		fontfiles = "calligraphic421"
	}
}

# For map names
font = {
	name = "MapFont"

	fontstyle = {
		style = regular
		fontfiles = "kereru_bold"
	}
}
