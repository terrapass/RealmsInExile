
colonize_land = {
	category = interaction_category_colonization	
	desc = colonize_land_desc
	auto_accept = no
	use_diplomatic_range = yes
	ignores_pending_interaction_block = yes

	is_shown = {	
		scope:recipient = {
			# has_government = no_government
			# culture = culture:wastelands
			lotr_wastelands_trigger = yes
		}

		scope:actor = {			
			NOT = {
				has_character_flag = colonize_cooldown
			}
			lotr_wastelands_trigger = no
			# is_neighbor_to_realm = scope:recipient.primary_title.title_capital_county
			any_sub_realm_county = {
				is_neighbor_to_realm = scope:recipient
			}
			is_independent_ruler = yes			
		}
	}

	on_accept = {
		scope:actor = {
			add_character_modifier = {
				modifier = colonization_cooldown
				days = 1325 # 5 years
			}
			add_character_flag = {
				flag = colonization_cooldown_flag
				years = 5
			}			
			send_interface_toast = {
				title = colonization_started_title
				left_icon = root				
			}			
			change_title_holder = {
				holder = scope:actor
				change = scope:change
				take_baronies = yes
			}			
		}
	}
}